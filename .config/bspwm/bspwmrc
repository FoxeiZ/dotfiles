#! /bin/sh
pgrep -x sxhkd > /dev/null || sxhkd &

# Customized stuffs

# When in doubt, f NVIDIA
xrandr -s 1920x1080

DOTTIES_DIR=$(find $HOME -type d -name "dotties")

# Kill processes
killall picom
killall polybar
killall redshift-gtk
killall nm-applet
killall pasystray
killall flameshot
killall dunst
killall sxhkd

wal -i $DOTTIES_DIR/desktop.jpg -n -s -t
. "${HOME}/.cache/wal/colors.sh"
feh --bg-fill $DOTTIES_DIR/desktop.jpg
eww -c ~/.config/eww/mybar open bar_right
eww -c ~/.config/eww/mybar open bar_center
eww -c ~/.config/eww/mybar open bar_left
polybar -c ~/.config/eww/mybar/polybar_tray.ini tray&

sxhkd -c $HOME/.config/bspwm/sxhkdrc &
picom &
redshift-gtk -l $(curl -s "https://location.services.mozilla.com/v1/geolocate?key=geoclue" | awk 'OFS=":" {print $3,$5}' | tr -d ',}') &
nm-applet &
pasystray &
flameshot &
dunst &

$HOME/.bscripts/sounds.sh &
# ================================

bspc monitor -d 1 2 3 4

bspc config border_width        3
bspc config window_gap          12
bspc config border_radius       8

bspc config pointer_action1 move
bspc config pointer_action2 resize_side
bspc config pointer_action2 resize_corner

bspc config split_ratio          0.52
bspc config borderless_monocle   true
bspc config gapless_monocle      true

bspc config normal_border_color "$color3"
bspc config active_border_color "$color3"
bspc config focused_border_color "$color3"

bspc rule -a Pavucontrol state=floating
bspc rule -a GitKraken state=floating
bspc rule -a Google-chrome state=floating
